<?xml version="1.0" encoding="UTF-8"?>
<c:capability
   name="Flow"
   namespace="flow"
   enhances="Device"
   version="1.0"
   xmlns:c="http://www.iris.com/schema/capability/1.0.0">
   
   <c:description>
      Model of a device that reports a flow rate.
   </c:description>
   
   <c:attributes>
      <c:attribute 
         name="flow" 
         readwrite="r" 
         type="double" 
         unit="m3/h"
         optional="false" 
         description="The instantaneous flow measurement."/>
   </c:attributes>
   
</c:capability>