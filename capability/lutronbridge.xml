<?xml version="1.0" encoding="UTF-8"?>
<c:capability
        name="LutronBridge"
        namespace="lutronbridge"
        enhances="Device"
        version="1.0"
        xmlns:c="http://www.iris.com/schema/capability/1.0.0">

    <c:description>
        Model of a Lutron bridge device.
    </c:description>

    <c:attributes>
        <c:attribute
                name="href"
                readwrite="r"
                type="string"
                optional="false"
                description="Unique identifier of a Lutron device"/>

        <c:attribute
                name="operatingmode"
                readwrite="r"
                type="enum"
                values="STARTUP,NORMAL,ASSOCIATION,ERROR"
                optional="false"
                description="Current operating mode fo the system."/>

        <c:attribute
                name="serialnumber"
                readwrite="r"
                type="string"
                optional="false"
                description="Serial number of the device."/>
    </c:attributes>

    <c:methods />
</c:capability>